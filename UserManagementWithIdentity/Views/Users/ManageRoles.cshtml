@model UserRolesVM
@{
	ViewData["Title"] = "ManageUsers";
}

<h1>
	Manage
	<span class="text-primary">
		@Model.UserName
	</span>
	Roles
</h1>

<form asp-action="ManageRoles" method="post">
	<div class="text-danger" asp-validation-summary="ModelOnly"></div>
	<div class="mb-2">
		@for (int i = 0; i < Model.Roles.Count; i++)
		{
			<input type="hidden" asp-for="UserId" />
			<input type="hidden" asp-for="UserName" />

			<div class="form-group">

				<input class="form-check-input" id="@Model.Roles[i].RoleName" type="checkbox" asp-for="Roles[i].IsSelected" />
				<label for="@Model.Roles[i].RoleName" class=" form-check-label">@Model.Roles[i].RoleName</label>

				<input type="hidden" asp-for="Roles[i].RoleName" />
			</div>
		}
	</div>
	<div>
		<input class="btn btn-outline-primary" type="submit" value="Save" />
		<a class="btn btn-outline-danger" asp-action="Index">Cancel</a>
	</div>
</form>

