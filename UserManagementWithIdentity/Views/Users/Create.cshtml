@model CreateUserVM
@{
	ViewData["Title"] = "Create New User";
}

<div class="row">
	<div class="col-md-4">
		<form asp-action="Create" id="registerForm" method="post">
			<h2>Create a new user.</h2>
			<hr />
			<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
			<div class="form-floating mb-3">
				<input asp-for="FirstName" class="form-control" maxlength="50" aria-required="true" placeholder="First Name" />
				<label asp-for="FirstName">First Name</label>
				<span asp-validation-for="FirstName" class="text-danger"></span>
			</div>
			<div class="form-floating mb-3">
				<input asp-for="LastName" class="form-control" maxlength="50" aria-required="true" placeholder="Last Name" />
				<label asp-for="LastName">Last Name</label>
				<span asp-validation-for="LastName" class="text-danger"></span>
			</div>
			<div class="form-floating mb-3">
				<input asp-for="UserName" class="form-control" aria-required="true" placeholder="User Name" />
				<label asp-for="UserName">User Name</label>
				<span asp-validation-for="UserName" class="text-danger"></span>
			</div>
			<div class="form-floating mb-3">
				<input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
				<label asp-for="Email">Email</label>
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>
			<div class="form-floating mb-3">
				<input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
				<label asp-for="Password">Password</label>
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
			<div class="form-floating mb-3">
				<input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
				<label asp-for="ConfirmPassword">Confirm Password</label>
				<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
			</div>
			<hr />
			<h6>Roles</h6>
			<div class="form-floating mb-3" style="background-color:#EEE; padding:10px; border-radius:10px">
				@for (int i = 0; i < Model.Roles.Count; i++)
				{
					<div class="form-group">
						<input class="form-check-input" id="@Model.Roles[i].RoleName" type="checkbox" asp-for="Roles[i].IsSelected" />
						<label for="@Model.Roles[i].RoleName" class=" form-check-label">@Model.Roles[i].RoleName</label>
						<input type="hidden" asp-for="Roles[i].RoleName" />
					</div>
				}
				<span asp-validation-for="Roles" class="text-danger"></span>
			</div>
			<button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
			<a class=" mt-3 w-100 btn btn-lg btn-outline-secondary" asp-action="index" >Back To List</a>
		</form>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}

