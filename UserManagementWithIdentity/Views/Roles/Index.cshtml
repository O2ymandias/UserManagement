@model List<IdentityRole>
@{
	ViewData["Title"] = "Roles";
}

<h1>All Roles</h1>

<partial name="PartialViews/CreateRolePartial" model="new CreateRoleVM()" />

@if (Model.Count > 0)
{
	<table class="table table-striped table-bordered table-hover mt-4">
		<thead>
			<tr class="bg-primary text-white text-center">
				<th>Role Name</th>
				<th>Id</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr class="text-center">
					<td>@item.Name</td>
					<td>@item.Id</td>
				</tr>
			}
		</tbody>
	</table>
}
else
{
	<div class="no-data">
		There Is No Roles ;(
	</div>
}

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}


